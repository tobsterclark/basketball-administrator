generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id            String   @id @default(uuid())
  location      Location
  court         Int
  team_light    Team     @relation("game_team_dark", fields: [team_light_id], references: [id])
  team_light_id String
  team_dark     Team     @relation("game_team_light", fields: [team_dark_id], references: [id])
  team_dark_id  String
  light_score   Int
  dark_score    Int
  date          DateTime
}

model Team {
  id          String   @id @default(uuid())
  name        String
  age_group   AgeGroup
  dark_games  Game[]   @relation("game_team_dark")
  light_games Game[]   @relation("game_team_light")
  players     Player[]
}

model Player {
  id         String @id @default(uuid())
  first_name String
  last_name  String
  number     Int?
  team       Team   @relation(fields: [team_id], references: [id])
  team_id    String
}

enum AgeGroup {
  KIDS
  ADULTS
}

enum Location {
  ST_IVES
  BELROSE
}
